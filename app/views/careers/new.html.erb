<!-- app/views/careers/new.html.erb -->
<%= render 'shared/header' %>
<h1 class="text-center">New Career</h1>

<div class="container">
  <%= form_with(model: @career, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
      <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="form-group">
      <%= form.label :technology %>
      <%= form.text_field :technology, class: "form-control", placeholder: "Enter technology", required: true %>
      <div class="invalid-feedback">Please enter a technology.</div>
    </div>

    <div class="form-group">
      <%= form.label :Description %>
      <%= form.rich_text_area :body, class: "form-control", placeholder: "Enter body", required: true %>
      <div class="invalid-feedback">Please enter the body.</div>
    </div>

    <div class="text-center" style = " margin: 20px;">
      <%= form.submit "Create Career", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


