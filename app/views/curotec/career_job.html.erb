                <div class = "font-fifteen">Industry</div>
                <div class = "mb-3 text-dark font-eighteen"><%= @jobs.technology%></div>
                <div class = "font-fifteen">Work Experience</div>
                <div class = "text-dark font-eighteen"><%= @jobs.experience %> years</div>

            </div>
        </div>
    </div>
</section>
